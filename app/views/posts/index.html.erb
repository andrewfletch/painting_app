
<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 mt-5">


      <% @posts.each do |post| %>
 
          <%= image_tag(post.image_url.to_s, class: "img-fluid") %>
          <% if session[:admin] then %>

            <%= link_to "Edit", edit_post_path(post), class: "edit_photo btn btn-default" %>
            <%= link_to "Delete", post, method: :delete, data: { confirm: "Are you sure?"}, class: "delete_photo btn btn-default" %>

          <% end %>

          
      <% end %>
      <div class="pagination">
        <%= will_paginate @posts, :page_links => false %>
      </div>

    </div>
  </div>
</div>

